@model IEnumerable<IntelRobotics.Models.KontaktForm>

@{
    ViewData["Title"] = "Index";
}

<h1>Indsendte kontaktforms</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Regarding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                Robot
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Regarding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            @if (true)
            {
                    <td>
                        @Html.DisplayFor(modelItem => item.RB)
                    </td>
            }
            <td>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
